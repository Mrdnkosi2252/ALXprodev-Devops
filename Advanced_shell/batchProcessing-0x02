#!/bin/bash

POKEMONS=("bulbasaur" "ivysaur" "venusaur" "charmander" "charmeleon")
OUTPUT_DIR="pokemon_data"
ERROR_FILE="errors.txt"
DELAY=2

mkdir -p "$OUTPUT_DIR"

for POKEMON in "${POKEMONS[@]}"; do
    echo "Fetching data for $POKEMON..."
    OUTPUT_FILE="$OUTPUT_DIR/$POKEMON.json"
    
    ATTEMPT=1
    SUCCESS=0

    while [ $ATTEMPT -le 3 ]; do
        curl -s -o "$OUTPUT_FILE" "https://pokeapi.co/api/v2/pokemon/$POKEMON" 2>> "$ERROR_FILE"

        if [ $? -eq 0 ] && [ -s "$OUTPUT_FILE" ]; then
            echo "Saved data to $OUTPUT_FILE âœ…"
            SUCCESS=1
            break
        else
            echo "Attempt $ATTEMPT failed for $POKEMON. Retrying in $DELAY seconds..." >> "$ERROR_FILE"
            sleep "$DELAY"
            ((ATTEMPT++))
        fi
    done

    if [ $SUCCESS -eq 0 ]; then
        echo "Failed to fetch data for $POKEMON after 3 attempts." >> "$ERROR_FILE"
    fi
done
